<?xml version="1.0" encoding="UTF-8"?>
<window>
<!--    <defaultcontrol always="true">10</defaultcontrol> -->
    <include condition="!Skin.HasSetting(InitialSetUpRun)">DefaultInitialSetup</include>
    <include>UnloadsScripts</include>
	
    <onload condition="Skin.HasSetting(EnableFanartScript) + Integer.IsGreater(Skin.String(FanArtCycleRate),0)">RunScript(script.grab.fanart,mode=random,refresh=$INFO[Skin.String(FanArtCycleRate)])</onload>
    <onload condition="!Skin.String(KodiIntroVideo)">Skin.SetString(KodiIntroVideo,special://skin/extras/Intro/KODI-Intro-Video.mp4)</onload>
    
    <!-- No startup playlist or intro video, or they have played already -->
    <onload condition="[!Skin.HasSetting(UseStartUpPlaylistPath) + Skin.HasSetting(HideKodiIntro)] | !String.IsEmpty(Window(Home).Property(StartupMediaStarted))">ReplaceWindow($INFO[System.StartupWindow])</onload>
    <!-- Startup playlist -->
	<onload condition="!String.IsEmpty(Skin.String(StartUpPlaylistPath)) + Skin.HasSetting(UseStartUpPlaylistPath) + String.IsEmpty(Window(Home).Property(StartupMediaStarted))">AlarmClock(playit,PlayMedia($ESCINFO[Skin.String(StartUpPlaylistPath)]),00:01,silent)</onload>
	<onload condition="!String.IsEmpty(Skin.String(StartUpPlaylistPath)) + Skin.HasSetting(UseStartUpPlaylistPath) + String.IsEmpty(Window(Home).Property(StartupMediaStarted))">SetProperty(StartupMediaStarted,1,home)</onload>
	<!-- Into video -->
	<onload condition="!String.IsEmpty(Skin.String(KodiIntroVideo)) + !Skin.HasSetting(HideKodiIntro) + String.IsEmpty(Window(Home).Property(StartupMediaStarted))">AlarmClock(playit,PlayMedia($ESCINFO[Skin.String(KodiIntroVideo)]),00:01,silent)</onload>
    <onload condition="!String.IsEmpty(Skin.String(KodiIntroVideo)) + !Skin.HasSetting(HideKodiIntro) + String.IsEmpty(Window(Home).Property(StartupMediaStarted))">SetProperty(StartupMediaStarted,1,home)</onload>
	
