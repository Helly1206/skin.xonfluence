<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<controls>
		<control type="button" id="2">
			<include>InvisibleButton</include>
			<onclick>ActivateWindow(1198)</onclick>
		</control>
		<control type="group">
			<visible>!Skin.HasSetting(HidePopUpSeekBar) + !Skin.HasSetting(Show_SlideShow_Paused) + !Window.IsActive(1198)</visible>
			<visible>SlideShow.IsPaused</visible>
			<left>505r</left>
			<top>-6</top>
			<include>VisibleFadeEffect</include>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>150</width>
				<height>70</height>
				<colordiffuse>EEFFFFFF</colordiffuse>
				<texture border="12">OverlayDialogBackground.png</texture>
			</control>
			<control type="label" id="1">
				<description>Chapter Pos No</description>
				<left>20</left>
				<top>10</top>
				<width>110</width>
				<height>20</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font12_title</font>
				<textcolor>$VAR[MainColorOne]</textcolor>
				<label>$LOCALIZE[21804]</label>
				<!-- <visible>player.chaptercount</visible> -->
			</control>
			<control type="label" id="1">
				<description>Chapter Pos No</description>
				<left>20</left>
				<top>30</top>
				<width>110</width>
				<height>20</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font13_title</font>
				<textcolor>grey2</textcolor>
				<label>$INFO[Slideshow.SlideIndex]</label>
				<!-- <visible>player.chaptercount</visible> -->
			</control>
		</control>
		<control type="group" id="13">
			<visible>!Skin.HasSetting(Show_SlideShow_Paused) + !Window.IsActive(1198)</visible>
			<animation effect="slide" start="0,0" end="185,665" time="0" condition="Skin.HasSetting(HidePopUpSeekBar)">Conditional</animation>
			<left>360r</left>
			<top>-6</top>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>180</width>
				<height>70</height>
				<colordiffuse>EEFFFFFF</colordiffuse>
				<texture border="12">OverlayDialogBackground.png</texture>
				<visible>!Skin.HasSetting(HidePopUpSeekBar)</visible>
			</control>
			<control type="image">
				<left>80</left>
				<top>10</top>
				<width>80</width>
				<height>50</height>
				<texture>OSDSeekFrame.png</texture>
			</control>
			<control type="image">
				<left>101</left>
				<top>14</top>
				<width>40</width>
				<height>40</height>
				<texture>OSDPause.png</texture>
			</control>
			<control type="label">
				<description>Paused Label</description>
				<animation effect="slide" start="0,0" end="0,19" time="0" condition="Skin.HasSetting(HidePopUpSeekBar)">Conditional</animation>
				<left>20</left>
				<top>7</top>
				<width>240</width>
				<height>20</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font10_title</font>
				<textcolor>$VAR[MainColorOne]</textcolor>
				<label>31043</label>
			</control>
		</control>
		<!-- media infos -->
		<control type="group">
			<left>20</left>
			<top>180r</top>
			<visible>Player.ShowInfo + !Window.IsActive(1198) + Player.HasMedia</visible>
			<include>VisibleFadeEffect</include>
			<include>SmallMusicInfo</include>
		</control>
		<control type="button">
			<visible>SlideShow.IsVideo + [!SlideShow.IsActive | SlideShow.IsPaused]</visible>
			<description>Video Play Button</description>
			<left>540</left>
			<top>260</top>
			<width>200</width>
			<height>200</height>
			<font>-</font>
			<onclick>play</onclick>
			<texturefocus>arrow-big-right.png</texturefocus>
			<texturenofocus>arrow-big-right.png</texturenofocus>
		</control>
	</controls>
</window>
